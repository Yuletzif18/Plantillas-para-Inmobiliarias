{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["@nuxtjs"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "vue/multi-word-component-names": "off",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "prefer-const": "warn",
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "object-shorthand": "warn"
  }
}
